{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"],
      "helpers/*": ["./src/helpers/*"],
      "@helpers/*": ["./src/helpers/*"]
    },
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  }
}
